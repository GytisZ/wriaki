{sys, [
       {lib_dirs, ["../apps", "../deps"]},
       {rel, "wriaki", "1",
        [
         kernel,
         stdlib,
         sasl,
         crypto,
         ibrowse,
         webmachine,
         erlydtl,
         wriaki
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "wriaki"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, wriaki, [{incl_cond, include}]},
       {app, ibrowse, [{incl_cond, include}]},
       {app, webmachine, [{incl_cond, include}]},
       {app, erlydtl, [{incl_cond, include}]},
       {app, sasl, [{incl_cond, include}]}
      ]}.

{rebar, [
         {empty_dirs, [
                       "log/sasl"
                      ]},

         {overlay, "overlay"}
         ]}.
